<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:id="@+id/appointment_end"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/time_separator"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="textStart"
            android:layout_marginStart="10dp"/>

    <TextView
            android:id="@+id/appointment_begin"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="5dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/time_separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="textStart"/>

    <TextView
            android:id="@+id/time_separator"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="9dp"
            android:ems="10"
            android:text="-"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/appointment_end"
            app:layout_constraintStart_toEndOf="@+id/appointment_begin"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>